<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/_12sdp"
        android:paddingVertical="@dimen/_15sdp"
        android:background="@drawable/rounded_alert_bg"
        android:layout_marginHorizontal="@dimen/_20sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/rubik_medium"
            android:text="Are you sure?"
            android:textColor="@color/black_50"
            android:textSize="@dimen/_14sdp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/rubik_regular"
            android:text="Are you sure you want to unlink from this team? You will no longer receive new content from this team."
            android:textColor="@color/gray_75"
            android:letterSpacing="0.05"
            android:layout_marginTop="@dimen/_5sdp"
            android:textSize="@dimen/_10sdp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginTop="@dimen/_15sdp">

            <TextView
                android:id="@+id/cancelTV"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/rubik_regular"
                android:text="Cancel"
                android:gravity="center"
                android:background="@drawable/rounded_button_bg"
                android:backgroundTint="@color/white"
                android:padding="@dimen/_8sdp"
                android:layout_marginEnd="@dimen/_3sdp"
                android:textColor="@color/purple_border"
                android:textSize="@dimen/_10sdp" />

            <TextView
                android:id="@+id/yesTV"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/rubik_regular"
                android:text="Yes, Remove"
                android:gravity="center"
                android:layout_marginStart="@dimen/_3sdp"
                android:background="@drawable/rounded_alert_button_bg"
                android:padding="@dimen/_8sdp"
                android:textColor="@color/black_50"
                android:textSize="@dimen/_10sdp" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>